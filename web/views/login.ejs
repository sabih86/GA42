<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Login - LLM Report</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-inter">
  <div class="min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md">
      <div class="bg-white rounded-2xl p-8 shadow-lg">
        <h2 class="text-2xl font-semibold mb-6 text-gray-900">Welcome Back</h2>

        <form action="/login" method="POST" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700">Email</label>
            <input name="email" type="email" required class="mt-1 block w-full rounded-lg border px-3 py-2 bg-gray-50"/>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700">Password</label>
            <input name="password" type="password" required class="mt-1 block w-full rounded-lg border px-3 py-2 bg-gray-50"/>
          </div>

          <div class="flex items-center justify-between">
            <label class="flex items-center gap-2 text-sm">
              <input type="checkbox" name="remember" class="bg-white" />
              Remember me
            </label>
            <a href="#" class="text-sm text-blue-600">Forgot?</a>
          </div>

          <button type="submit" class="w-full py-2 px-4 rounded-lg text-white" style="background:var(--primary)">Sign in</button>
        </form>

        <p class="mt-6 text-sm text-center text-gray-600">Don't have an account? <a href="/signup" class="text-blue-600">Create one</a></p>
      </div>
    </div>
  </div>
</body>
</html>
