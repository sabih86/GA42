<!-- views/partials/sidebar.ejs -->
<aside class="hidden sm:block w-72 bg-white border-r border-gray-200 p-6 min-h-screen z-30">
  <div class="flex items-center gap-2 mb-8">
    <i data-lucide="layout-dashboard" class="text-blue-600 w-5 h-5"></i>
    <h1 class="text-xl font-semibold text-gray-900">LLM Report</h1>
  </div>

  <section class="mb-8">
    <h4 class="text-xs font-semibold text-gray-500 tracking-wider mb-2">SUMMARY</h4>
    <dl class="text-sm text-gray-600 space-y-2">
      <div class="flex justify-between"><dt>Domain:</dt><dd class="text-blue-600"><%= summary.domain %></dd></div>
      <div class="flex justify-between"><dt>Competitors:</dt><dd><%= summary.totalCompetitors || 2 %></dd></div>
      <div class="flex justify-between"><dt>Platform:</dt><dd class="text-green-500"><%= summary.platform %></dd></div>
      <div class="flex justify-between"><dt>Keywords:</dt><dd><%= summary.totalKeywords %></dd></div>
      <div class="flex justify-between"><dt>Questions:</dt><dd><%= summary.totalQuestions %></dd></div>
      <div class="flex justify-between"><dt>Total MSV:</dt><dd><%= summary.totalMSV %></dd></div>
    </dl>
  </section>

  <div class="border-t border-gray-100 pt-6">
    <h4 class="text-xs font-semibold text-gray-500 tracking-wider mb-2">NAVIGATION</h4>
    <nav class="space-y-2 text-sm">
      <a href="/dashboard" class="flex items-center gap-3 px-3 py-2 rounded-lg bg-blue-50 text-blue-600">
        <i data-lucide="list" class="w-4 h-4"></i> Keywords & Prompts
      </a>
      <a href="/dashboard?tab=mentions" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-50">
        <i data-lucide="megaphone" class="w-4 h-4"></i> Brand Mentions
      </a>
      <a href="/dashboard?tab=rank" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-50">
        <i data-lucide="bar-chart" class="w-4 h-4"></i> Average Rank
      </a>
      <a href="/dashboard?tab=sov" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-50">
        <i data-lucide="activity" class="w-4 h-4"></i> Average SOV
      </a>
      <a href="/dashboard?tab=citations" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-50">
        <i data-lucide="book" class="w-4 h-4"></i> Citations
      </a>
      <a href="/dashboard?tab=opportunities" class="flex items-center gap-3 px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-50">
        <i data-lucide="target" class="w-4 h-4"></i> Opportunities
      </a>
    </nav>
  </div>

  <script>lucide.createIcons();</script>
</aside>
